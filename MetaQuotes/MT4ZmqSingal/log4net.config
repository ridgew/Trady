<?xml version="1.0" encoding="utf-8"?>
<log4net debug="false">

  <root>
    <level value="ALL" />
    <appender-ref ref="DebugLog" />
  </root>

  <!-- 异常消息记录 -->
  <appender name="ErrorLog" type="log4net.Appender.RollingFileAppender">
    <!-- 日志记录文件 -->
    <file value="Logs\error.log" />
    <!-- 是否添加到文件末尾 -->
    <appendToFile value="true" />
    <!-- 滚动记录方式 -->
    <rollingStyle value="Composite" />
    <!-- 日期格式 -->
    <datePattern value=".yyyy-MM-dd" />
    <!-- 设置无限备份=-1 ，最大备份数为1000 -->
    <maxSizeRollBackups value="10" />
    <!-- 每个文件的最大尺寸 -->
    <maximumFileSize value="100MB" />
    <!-- 名称是否可以更改 为false时可以更改 -->
    <staticLogFileName value="true" />
    <!-- 允许日志文件被其它进程打开 -->
    <LockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level - %message%newline" />
    </layout>
  </appender>

  <!-- 调试跟踪消息记录 -->
  <appender name="DebugLog" type="log4net.Appender.RollingFileAppender">
    <!-- 日志记录文件 -->
    <file value="Logs\debug.log" />
    <!-- 是否添加到文件末尾 -->
    <appendToFile value="true" />
    <!-- 滚动记录方式 -->
    <rollingStyle value="Composite" />
    <!-- 日期格式 -->
    <datePattern value=".yyyy-MM-dd" />
    <!-- 设置无限备份=-1 ，最大备份数为1000 -->
    <maxSizeRollBackups value="10" />
    <!-- 每个文件的最大尺寸 -->
    <maximumFileSize value="100MB" />
    <!-- 名称是否可以更改 为false时可以更改 -->
    <staticLogFileName value="true" />
    <!-- 允许日志文件被其它进程打开 -->
    <LockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level - %message%newline" />
    </layout>
  </appender>

  <!-- 普通消息记录 -->
  <appender name="InfoLog" type="log4net.Appender.RollingFileAppender">
    <!-- 日志记录文件 -->
    <file value="Logs\info.log" />
    <!-- 是否添加到文件末尾 -->
    <appendToFile value="true" />
    <!-- 滚动记录方式 -->
    <rollingStyle value="Composite" />
    <!-- 日期格式 -->
    <datePattern value=".yyyy-MM-dd" />
    <!-- 设置无限备份=-1 ，最大备份数为1000 -->
    <maxSizeRollBackups value="10" />
    <!-- 每个文件的最大尺寸 -->
    <maximumFileSize value="100MB" />
    <!-- 名称是否可以更改 为false时可以更改 -->
    <staticLogFileName value="true" />
    <!-- 允许日志文件被其它进程打开 -->
    <LockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level - %message%newline" />
    </layout>
  </appender>

  <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
    <mapping>
      <level value="ERROR" />
      <foreColor value="White" />
      <backColor value="Red, HighIntensity" />
    </mapping>
    <mapping>
      <level value="DEBUG" />
      <foreColor value="White" />
      <backColor value="Green" />
    </mapping>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
    </layout>
  </appender>

  <appender name="ConsoleErrorAppender" type="log4net.Appender.ConsoleAppender">
    <target value="Console.Error" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
    </layout>
  </appender>
  <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
    </layout>
  </appender>


  <logger name="ErrorLog" additivity="false">
    <level value="ERROR"/>
    <appender-ref ref="ErrorLog"/>
  </logger>
  <logger name="DebugLog" additivity="false">
    <level value="DEBUG"/>
    <appender-ref ref="DebugLog"/>
  </logger>
  <logger name="InfoLog" additivity="false">
    <level value="INFO"/>
    <appender-ref ref="InfoLog"/>
  </logger>
  <logger name="TALog" additivity="false">
    <level value="ALL"/>
    <appender-ref ref="DebugLog"/>
  </logger>
  <logger name="CmdLog" additivity="false">
    <level value="ALL"/>
    <appender-ref ref="ColoredConsoleAppender"/>
  </logger>
  <logger name="DataLog" additivity="false">
    <level value="ALL"/>
    <appender-ref ref="InfoLog"/>
  </logger>
</log4net>